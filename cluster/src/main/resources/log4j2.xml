<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="com.repoachiever.logging" status="WARN" xmlns:xi="http://www.w3.org/2001/XInclude">
    <Appenders>
        <fatalappender name="fatalappender" />
        <transferappender name="transferappender" />
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="console" />
            <AppenderRef ref="fatalappender" />
            <AppenderRef ref="transferappender" />
        </Root>
    </Loggers>
</Configuration>